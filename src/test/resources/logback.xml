<configuration>

    <!-- HINT: Logback file is applied during execution outside of tests -->

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd' 'HH:mm:ss.SSS'Z', UTC} [%F:%L] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="STDOUT"/>
    </root>

    <logger name="com.stompleague.authentication" level="debug"/>

</configuration>
